{
  "manifest_version": 3,
  "name": "ReadEase",
  "version": "1.0",
  "description": "Chrome Extension for ReadEase",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
